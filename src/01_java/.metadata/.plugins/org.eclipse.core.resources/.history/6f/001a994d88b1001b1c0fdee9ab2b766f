package com.lex.ex;
// 변수 선언방법
public class VarEx03 {
	public static void main(String[] args) {
			// 1.자료형 변수명; 변수 선언과 할당을 분리
		int num1; //변수 선언
		num1 = 10; //변수값 할당
		System.out.println(num1);
		// 2. 자료형 변수명 = 초기값; 변수선언과 할당을 동시에
//		System.out.println(num2); 
		int num2 = 20;
		System.out.println(num2);
	}
}
